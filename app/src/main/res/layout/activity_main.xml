<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/activity_main_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />



    <RelativeLayout
        android:id="@+id/activity_main_rl_profile_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_btn_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/activity_main_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="@string/name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activity_main_btn_share_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="@string/share_videos"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/activity_main_btn_share_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_main_btn_share_videos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/share_images"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</RelativeLayout>
